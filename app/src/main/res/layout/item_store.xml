<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/store_role_cost1_bg"
        android:elevation="3dp">

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/gold_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_gold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/cost_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            app:layout_constraintTop_toTopOf="@id/gold_iv"
            app:layout_constraintBottom_toBottomOf="@id/gold_iv"
            app:layout_constraintStart_toEndOf="@id/gold_iv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
